# AI Stock Discovery Engine Configuration
# Copy this file to .env and configure your API keys and settings

# =============================================================================
# API KEYS
# =============================================================================

# OpenAI API Key for LLM analysis
OPENAI_API_KEY=your_openai_api_key_here

# News API Key for news collection
NEWS_API_KEY=your_news_api_key_here

# Twitter Bearer Token for sentiment analysis
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# Financial Data API Keys
POLYGON_API_KEY=your_polygon_api_key_here
FINNHUB_API_KEY=your_finnhub_api_key_here
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# =============================================================================
# FEATURE TOGGLES
# =============================================================================

# Enable/disable individual data sources
# Set to true/false, 1/0, yes/no, or on/off

# News collection (NewsAPI + RSS feeds)
ENABLE_NEWS_API=true

# Twitter sentiment analysis
ENABLE_TWITTER_API=false

# Polymarket prediction data
ENABLE_POLYMARKET_API=false

# Market data sources
ENABLE_POLYGON_API=true
ENABLE_YFINANCE_API=false

# LLM analysis (OpenAI)
ENABLE_OPENAI_API=true

# =============================================================================
# DATA SOURCE PREFERENCES
# =============================================================================

# Prioritize Polygon.io over Yahoo Finance for market data
# When true, Polygon.io will be tried first, falling back to yfinance if needed
PRIORITIZE_POLYGON=true

# =============================================================================
# SYSTEM SETTINGS
# =============================================================================

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# =============================================================================
# USAGE NOTES
# =============================================================================

# 1. At least one data source must be enabled for the system to function
# 2. If all APIs are disabled, the system will fail to start
# 3. When APIs are disabled, the system will skip those data collection steps
#    rather than falling back to mock/fake data
# 4. Market data requires either POLYGON_API or YFINANCE_API to be enabled
# 5. LLM analysis will fall back to keyword-based identification if disabled
